{
    "name": "vudit",
    "productName": "Vudit",
    "version": "1.0.0",
    "description": "A cross platform file viewer.",
    "main": "app/main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir --config build.js",
        "dist": "electron-builder --config build.js",
        "dist-all": "electron-builder -mlw --config build.js"
    },
    "repository": "https://github.com/praharshjain/Vudit-Desktop",
    "keywords": [
        "electron",
        "filesystem",
        "cross-platform",
        "desktop-app",
        "file",
        "viewer",
        "file-viewer",
        "document-viewer",
        "djvu-viewer",
        "open-document-viewer",
        "docx-viewer",
        "epub-viewer",
        "code-viewer",
        "syntax-highlighter",
        "markdown-preview",
        "markdown-viewer",
        "image-viewer",
        "media-player",
        "music-player",
        "video-player",
        "pdf-viewer",
        "rtf-viewer",
        "sqlite-viewer",
        "swf-viewer",
        "treedoc-viewer",
        "zip-viewer"
    ],
    "author": "Praharsh Jain",
    "license": "MIT",
    "website": "https://praharsh.tech",
    "copyright": "Copyright © Praharsh Jain, 2023",
    "devDependencies": {
        "electron": "^29.1.4",
        "electron-builder": "^24.13.3",
        "@actions/exec": "^1.1.1",
        "quicklookjs": "^1.0.0",
        "plist": "^3.1.0"
    },
    "dependencies": {
        "adm-zip": "^0.5.12",
        "electron-chrome-extensions": "^3.10.1",
        "electron-chromecast": "^1.1.0",
        "electron-prompt": "^1.7.0",
        "follow-redirects": "^1.15.6",
        "menubar": "^9.4.0",
        "mime-db": "^1.52.0",
        "mime-lookup": "^0.0.2",
        "v8-compile-cache": "^2.4.0",
        "whatwg-mimetype": "^4.0.0"
    },
    "build": {
        "appId": "tech.praharsh.vudit",
        "asar": false,
        "afterPack": "./afterPackHook.js",
        "compression": "maximum",
        "copyright": "Copyright © Praharsh Jain, 2023",
        "npmRebuild": false,
        "includePdb": true,
        "icon": "icon.png",
        "extraFiles": [
            {
                "from": "node_modules/quicklookjs/dist/PreviewExtension.appex",
                "to": "PlugIns/PreviewExtension.appex"
            },
            {
                "from": "app",
                "to": "PlugIns/PreviewExtension.appex/Contents/Resources/app"
            }
        ],
        "dmg": {
            "icon": "app/icon.png"
        },
        "deb": {
            "icon": "icon.png"
        },
        "mac": {
            "category": "public.app-category.utilities",
            "target": "default",
            "icon": "icon.png",
            "type": "distribution"
        },
        "linux": {
            "category": "Utility",
            "icon": "icon.png"
        },
        "win": {
            "icon": "icon.png"
        }
    }
}